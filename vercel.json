{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["build/**/*"]
      }
    }
  ],
  "build": {
    "env": {
      "BUILD_MODE": "production"
    },
    "commands": {
      "build": "npm run build"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/build/src/$1"
    }
  ]
}
